{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.AspNetCore.Authentication": "Debug",
        "System": "Warning"
      }
    }
  },

  "ConnectionStrings": {
    "DefaultConnection": "Server=.;Database=IdentityServerAspNetIdentity;Trusted_Connection=True;MultipleActiveResultSets=True;"
  },
  "Clients": [
    {
      "ClientId": "TestClient",
      "AllowedGrantTypes": [
        "client_credentials"
      ],
      "ClientSecrets": [
        "secret"
      ],
      "AllowedScopes": [
        "testscope"
      ]
    },
    {
      "ClientId": "webclient",
      "AllowedGrantTypes": [
        "authorization_code"
      ],
      "AllowOfflineAccess": true,
      "ClientSecrets": [
        "secret"
      ],
      "AllowedScopes": [
        "openid",
        "profile",
        "email",
        "testscope",
        "verification",
        "color"
      ],
      "RedirectUris": [
        "https://localhost:5003/signin-oidc"
      ],
      "PostLogoutRedirectUris": [
        "https://localhost:5003/signout-callback-oidc"
      ]
    },
    {
      "ClientId": "javascriptclient",
      "AllowedGrantTypes": [
        "authorization_code"
      ],
      "AllowOfflineAccess": true,
      "ClientSecrets": [
        "secret"
      ],
      "AllowedScopes": [
        "openid",
        "profile",
        "email",
        "testscope",
        "verification",
        "color"
      ],
      "RedirectUris": [
        "https://localhost:5004/signin-oidc"
      ],
      "PostLogoutRedirectUris": [
        "https://localhost:5004/signout-callback-oidc"
      ]
    },
    {
      "ClientId": "react",
      "ClientName": "React Client",
      "RequireClientSecret": false,
      "AllowedGrantTypes": [
        "authorization_code"
      ],
      "AllowOfflineAccess": true,
      "ClientSecrets": [
        "secret"
      ],
      "AllowedScopes": [
        "openid",
        "profile",
        "email",
        "testscope",
        "verification",
        "color"
      ],
      "RedirectUris": [
        "https://localhost:5005/callback"
      ],
      "PostLogoutRedirectUris": [
        "https://localhost:5005"
      ],
      "AllowedCorsOrigins": [
        "https://localhost:5005"
      ]
    }
  ]
}